<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ledger Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="container py-4">

    <h1 class="text-center mb-4">Ledger Report</h1>

    <!-- Back to Inventory Button -->
    <div class="d-flex justify-content-between mb-3">
        <a href="/" class="btn btn-secondary">Back to Inventory</a>
        <a href="/sales" class="btn btn-success">View Sales</a>
    </div>

    <!-- Ledger Table -->
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Item Name</th>
                <th>Debit ($) - (Stock Value Added)</th>
                <th>Credit ($) - (Total Sales Value)</th>
                <th>Balance ($) - (Remaining Stock Value)</th>
            </tr>
        </thead>
        <tbody>
            <% if (ledgerEntries.length === 0) { %>
                <tr>
                    <td colspan="4" class="text-center text-muted">No transactions found.</td>
                </tr>
            <% } else { %>
                <% ledgerEntries.forEach(entry => { %>
                    <tr>
                        <td><%= entry.itemName %></td>
                        <td>$<%= entry.debit.toFixed(2) %></td>
                        <td>$<%= entry.credit.toFixed(2) %></td>
                        <td>$<%= entry.balance.toFixed(2) %></td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>

    <!-- Footer -->
    <footer class="text-center mt-4 text-muted">
        &copy; <%= new Date().getFullYear() %> Inventory Management System
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
