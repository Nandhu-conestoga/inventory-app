<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Transactions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="container py-4">

    <h1 class="text-center mb-4">Sales Transactions</h1>

    <!-- Back to Inventory and Ledger Button -->
    <div class="d-flex justify-content-between mb-3">
        <a href="/" class="btn btn-secondary">Back to Inventory</a>
        <a href="/sales/ledger" class="btn btn-warning">View Ledger</a>
    </div>

    <!-- Display Total Revenue -->
    <div class="alert alert-success text-center">
        <h4>Total Revenue: $<%= totalRevenue.toFixed(2) %></h4>
    </div>

    <!-- Sales Transactions Table -->
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>#ID</th>
                <th>Item Name</th>
                <th>Quantity Sold</th>
                <th>Price Per Item ($)</th>
                <th>Total Sale Amount ($)</th>
                <th>Sale Date</th>
            </tr>
        </thead>
        <tbody>
            <% if (sales.length === 0) { %>
                <tr>
                    <td colspan="6" class="text-center text-muted">No sales transactions found.</td>
                </tr>
            <% } else { %>
                <% sales.forEach((sale, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= sale.item.name %></td>
                        <td><%= sale.quantitySold %></td>
                        <td>$<%= sale.pricePerItem.toFixed(2) %></td>
                        <td>$<%= sale.totalSaleAmount.toFixed(2) %></td>
                        <td><%= sale.saleDate.toDateString() %></td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>

    <!-- Footer -->
    <footer class="text-center mt-4 text-muted">
        &copy; <%= new Date().getFullYear() %> Inventory Management System
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
